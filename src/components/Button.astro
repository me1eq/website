<button
  class="appearance-none py-2 px-4 bg-purple-500 text-white font-semibold rounded-lg shadow-md hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:ring-opacity-75"
  id="redirect-button"
>
  <slot />
</button>

<script type="module">
  // Überprüfen, ob der Code im Browser läuft
  if (typeof window !== "undefined" && typeof document !== "undefined") {
    // Sicherstellen, dass das DOM bereit ist
    window.addEventListener('DOMContentLoaded', () => {
      const button = document.getElementById('redirect-button');
      
      if (button) {
        button.addEventListener('click', () => {
          const buttonText = button.textContent.trim();

          // Weiterleitung je nach Button-Text
          if (buttonText === 'Mehr erfahren') {
            window.location.href = '/philosophie'; // Weiterleitung zur Philosophie-Seite
          } else if (buttonText === 'Jetzt buchen') {
            window.location.href = '/buchung'; // Weiterleitung zur Buchungs-Seite
          } else {
            window.location.href = '/'; // Standard-Weiterleitung zur Startseite
          }
        });
      }
    });
  }
</script>
